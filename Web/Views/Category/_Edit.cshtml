@using Shared.Models

@model CategoryViewModel

<div class="modal" tabindex="-1" role="dialog" id="editModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" id="editModalX">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <form id="frmEdit" method="put">

                    <div class="form-group col-md-6 mb-3">
                        <input asp-for="Id" type="hidden" />
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-6 mb-3">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control form-control-sm" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" id="editModallClose">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnUpdate">Update</button>
            </div>

        </div>
    </div>
</div>